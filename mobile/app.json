{
  "expo": {
    "name": "Travorier",
    "slug": "travorier",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.travorier.app",
      "infoPlist": {
        "NSCameraUsageDescription": "We need camera access to take photos of packages during physical inspection.",
        "NSPhotoLibraryUsageDescription": "We need photo library access to upload package inspection photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.travorier.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Travorier to access camera for package inspection"
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow Travorier to scan QR codes for delivery confirmation"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff"
        }
      ]
    ],
    "scheme": "travorier",
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
